<div id="loggin_box">
	<h2>¿Olvidó la contraseña?</h2>
	<p>
		Ingresa tu dirección de email y te enviaremos las instrucciones para actualizar la contraseña.
	</p>
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	  <%= f.error_notification %>
	  <div class="inputs">
	    <%= f.input :email, :required => true %>
	  </div>

	  <div class="actions">
	    <%= f.button :submit, "Enviar instrucciones" %>
	  </div>
	<% end %>

	<%= render "links" %>
</div>